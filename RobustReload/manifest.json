{
    "name": "RobustReload",
    "version": "0.1",
    "description": "Because the wireless network drops constantly",
    "background_page": "background.html",
    "browser_action": {
	"default_icon": "rereload.png"
    },
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "js": ["loadReport.js"]
	}
    ],
    "options_page": "options.html",
    "permissions": [
	"tabs"
    ]
}